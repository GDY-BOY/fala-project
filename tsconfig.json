{
    "compilerOptions": {
      "jsx": "preserve", // or "react-jsx" if you're using React 17+ with the new JSX transform
      "module": "esnext",
      "target": "es6",
      "allowJs": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": ".", // VERY important
      "paths": {
      "@/*": ["./*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
  }