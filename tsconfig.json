{
    "compilerOptions": {
      "jsx": "react-jsx", // or "react-jsx" if you're using React 17+ with the new JSX transform
      "types": ["styled-jsx"],
      "module": "esnext",
      "target": "es6",
      "allowJs": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": ".", // VERY important
      "paths": {
      "@/*": ["./*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "styled-jsx.d.ts"],
    "exclude": ["node_modules"]
  }